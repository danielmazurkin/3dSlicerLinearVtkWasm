  COMMAND ${CMAKE_COMMAND} -E copy "/work/emscripten-build/_deps/zstd_lib-subbuild/zstd_lib-populate-prefix/src/zstd_lib-populate-stamp/zstd_lib-populate-gitinfo.txt" "/work/emscripten-build/_deps/zstd_lib-subbuild/zstd_lib-populate-prefix/src/zstd_lib-populate-stamp/zstd_lib-populate-gitclone-lastrun.txt"
  RESULT_VARIABLE error_code
)
